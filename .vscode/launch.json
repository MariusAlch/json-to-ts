  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Typescript",
      "program": "${workspaceRoot}/src/index.ts",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceRoot}/build/**/*.js",
        "${workspaceRoot}/build/**/*.d.ts",
        "${workspaceRoot}/build/**/*.js.map"
      ]
    }
  ]
}